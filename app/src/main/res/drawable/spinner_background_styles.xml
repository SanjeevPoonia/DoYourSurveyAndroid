<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/Transparent">
                </solid>

                <corners android:radius="7dp" />

                <padding
                    android:bottom="05pt"
                    android:left="05pt"
                    android:right="05pt"
                    android:top="05pt" />
                <stroke
                    android:width="1dp"
                    android:color="#777777"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="bottom|right"
                android:src="@drawable/down_arraow" />
        </item>
    </layer-list></item>
</selector>