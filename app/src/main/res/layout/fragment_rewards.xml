<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.qdegrees.activity.ui.panelprofile.PanelProfileFragment"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
            android:padding="05pt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="05pt"
                android:gravity="end|center_vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    android:elevation="8dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    android:id="@+id/cv_Fragment_Reward_ReedemPoints"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textAllCaps="false"
                        android:text="â‚¹ Reedem Points"
                        android:paddingEnd="05pt"
                        android:paddingStart="05pt"
                        android:paddingTop="02pt"
                        android:paddingBottom="02pt"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="02pt"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="05dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="01pt"
                            android:src="@drawable/ic_pointearned"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:text="0"
                                android:padding="01pt"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/tvFragmentRewardPointEarned"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/view_color"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Points Earned"
                                android:padding="01pt"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="02pt"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="05dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="01pt"
                            android:src="@drawable/ic_redeempoints"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvFragmentRewardPointRedeemed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="01pt"
                                android:text="0"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/view_color"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Points Redeemed"
                                android:padding="01pt"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="05pt">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="02pt"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="05dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="01pt"
                            android:src="@drawable/ic_pointsavailable"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:text="0"
                                android:padding="01pt"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/tvFragmentRewardPointAvailable"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/view_color"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Points Available"
                                android:padding="01pt"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="02pt"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="05dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="01pt"
                            android:src="@drawable/ic_completedsurvey"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:text="0"
                                android:padding="01pt"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/tvFragmentRewardCompletedSurvey"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/view_color"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Completed Survey"
                                android:padding="01pt"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimaryDark"
                android:text="No Redeemed Coupons Yet"
                android:gravity="center"
                android:padding="05pt"
                android:id="@+id/tvFragmentRewardNoDataText"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvFragmentReward"
                android:visibility="gone"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90000000"
            android:id="@+id/Fragment_Reward_DemoLayout"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/demo_reward"
                android:scaleType="fitXY"
                android:id="@+id/Fragment_Reward_DemoImg"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="02pt"
                android:background="#30000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="02pt"
                android:text="Got It"
                android:textColor="@color/white"
                android:id="@+id/Fragment_Reward_NextBtn"
                android:textAllCaps="false"
                />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>