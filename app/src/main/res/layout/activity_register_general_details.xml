<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="05pt"
    android:background="@color/light_back">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="05pt">
                <ImageView
                    android:layout_width="100pt"
                    android:layout_height="50pt"
                    android:src="@drawable/logo"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="05pt"
                    app:cardCornerRadius="07dp"
                    app:cardElevation="07dp"
                    android:elevation="8dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    android:paddingTop="20pt"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="05pt">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="20pt"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:gravity="center_vertical"
                                android:padding="02pt"
                                android:id="@+id/tvGeneralDetailEmail"
                                android:text="Email"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:tint="@color/pro_color"
                                android:src="@drawable/ic_baseline_mail_outline_24"/>

                        </LinearLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10pt"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Create Password"
                                android:drawableEnd="@drawable/ic_baseline_lock_open_24"
                                android:inputType="textPassword"
                                android:imeOptions="actionNext"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/disable_btn"
                                android:id="@+id/et_registergeneral_password"
                                android:drawableTint="@color/pro_color"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5pt"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Phone"
                                android:drawableEnd="@drawable/ic_baseline_call_24"
                                android:inputType="phone"
                                android:imeOptions="actionNext"
                                android:id="@+id/et_registergeneral_Phone"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/disable_btn"
                                android:drawableTint="@color/pro_color"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5pt"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="First Name"
                                android:drawableEnd="@drawable/ic_baseline_person_24"
                                android:inputType="textPersonName|textCapWords"
                                android:imeOptions="actionNext"
                                android:id="@+id/et_registergeneral_firstname"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/disable_btn"
                                android:drawableTint="@color/pro_color"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5pt"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Last Name"
                                android:drawableEnd="@drawable/ic_baseline_person_24"
                                android:inputType="textPersonName|textCapWords"
                                android:imeOptions="actionDone"
                                android:id="@+id/et_registergeneral_lastName"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/disable_btn"
                                android:drawableTint="@color/pro_color"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="02pt"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="Gender"
                            android:textColor="@color/colorPrimaryDark"/>
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="02pt"
                            android:id="@+id/rgRegisterGeneralGender"
                            android:orientation="horizontal">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Gender_Male"
                                android:layout_weight="1"
                                android:id="@+id/rbGenderMale"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Gender_FeMale"
                                android:layout_weight="1"
                                android:id="@+id/rbGenderFeMale"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/Gender_Transgender"
                                android:layout_weight="1"
                                android:id="@+id/rbGenderTransgender"/>
                        </RadioGroup>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5pt"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Date Of Birth"
                                android:drawableEnd="@drawable/ic_baseline_perm_contact_calendar_24"
                                android:inputType="date"
                                android:imeOptions="actionNext"
                                android:id="@+id/tv_registergeneral_dob"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/disable_btn"
                                android:drawableTint="@color/pro_color"
                                android:focusable="false"
                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5pt"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter City"
                                android:drawableEnd="@drawable/ic_baseline_location_city_24"
                                android:inputType="text|textCapSentences"
                                android:imeOptions="actionNext"
                                android:id="@+id/et_registergeneral_City"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/disable_btn"
                                android:drawableTint="@color/pro_color"

                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5pt"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter Bio"
                                android:drawableEnd="@drawable/ic_baseline_person_24"
                                android:inputType="text|textCapSentences|textMultiLine"
                                android:lines="3"
                                android:imeOptions="actionNext"
                                android:id="@+id/et_registergeneral_Bio"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/disable_btn"
                                android:drawableTint="@color/pro_color"

                                />

                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5pt"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Redeem Coupon"
                                android:drawableEnd="@drawable/ic_baseline_person_add_alt_1_24"
                                android:inputType="text|textCapSentences"
                                android:imeOptions="actionDone"
                                android:id="@+id/et_registergeneral_RedeemCoupon"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textColorHint="@color/disable_btn"
                                android:drawableTint="@color/pro_color"

                                />

                        </com.google.android.material.textfield.TextInputLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="05pt"
                            app:cardCornerRadius="7dp"
                            app:cardElevation="10dp"
                            android:elevation="8dp"
                            app:cardBackgroundColor="@color/pro_color"
                            android:dividerHeight="0.0px"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            app:cardPreventCornerOverlap="false"
                            android:id="@+id/cv_RegisterGeneral_Submit"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingStart="20pt"
                                android:paddingTop="05pt"
                                android:paddingEnd="20pt"
                                android:paddingBottom="05pt"
                                android:text="Submit"
                                android:textAllCaps="false"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="02pt"
                            android:layout_marginTop="05pt"
                            android:text="@string/login"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:id="@+id/tv_registergeneral_Login"
                            android:textSize="12sp"
                            />
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>