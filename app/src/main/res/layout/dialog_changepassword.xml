<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="05pt">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="05pt"
        app:cardCornerRadius="07dp"
        app:cardElevation="07dp"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardPreventCornerOverlap="false"
        android:paddingTop="20pt"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="05pt"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="02pt"
                android:background="@color/colorPrimaryDark"
                android:layout_marginBottom="05pt">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="02pt"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Re-set Password"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background_styles"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:id="@+id/et_change_currentpassword"
                    android:textColor="@color/black"
                    android:hint="Current Password"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <View
                    android:layout_width="01pt"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="01pt"
                    android:layout_marginRight="05pt"
                    android:background="@color/view_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_lock_open_24"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="01pt"
                android:layout_marginTop="02pt"
                android:layout_marginBottom="02pt"
                android:background="@color/view_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="05pt"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background_styles"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:id="@+id/et_change_newpassword"
                    android:textColor="@color/black"
                    android:hint="New Password"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <View
                    android:layout_width="01pt"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="01pt"
                    android:layout_marginRight="05pt"
                    android:background="@color/view_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_lock_open_24"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="01pt"
                android:layout_marginTop="02pt"
                android:layout_marginBottom="02pt"
                android:background="@color/view_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="05pt"
                >
                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_background_styles"
                    android:inputType="textPassword"
                    android:imeOptions="actionDone"
                    android:id="@+id/et_change_confirmpassword"
                    android:textColor="@color/black"
                    android:hint="Confirm Password"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <View
                    android:layout_width="01pt"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="01pt"
                    android:layout_marginRight="05pt"
                    android:background="@color/view_color"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_lock_open_24"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="01pt"
                android:layout_marginTop="02pt"
                android:layout_marginBottom="02pt"
                android:background="@color/view_color"/>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="05pt"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:elevation="8dp"
                app:cardBackgroundColor="@color/pro_color"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardPreventCornerOverlap="false"
                android:id="@+id/cv_change_ChangePassword"
                android:layout_marginTop="10pt"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textAllCaps="false"
                    android:text="Change Password"
                    android:paddingEnd="20pt"
                    android:paddingStart="20pt"
                    android:paddingTop="05pt"
                    android:paddingBottom="05pt"
                    />
            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>