<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="05pt">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="02pt"
        app:cardCornerRadius="10dp"
        app:cardElevation="05dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/cv_fragment_Reward_listitem"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="05pt"
            android:background="@drawable/signout_background_styyles">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="02pt"
                android:textStyle="bold"
                android:text="Confirm Sign Out"
                android:textColor="@color/white"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="01pt"
                android:background="@color/view_color"
                android:layout_marginTop="02pt"
                android:layout_marginBottom="05pt"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="@color/text_white_low"
                        android:id="@+id/Fragment_Signout_Text"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="05pt"
                        android:gravity="end|center_vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textColor="@color/white"
                            android:layout_gravity="end"
                            android:padding="05pt"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/tvFragmentSignOut_No"
                            android:layout_marginRight="10pt"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YES"
                            android:textColor="@color/white"
                            android:layout_gravity="end"
                            android:textStyle="bold"
                            android:padding="05pt"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/tvFragmentSignOut_Yes"

                            />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_signout_sad"
                    android:layout_margin="02pt"/>

            </LinearLayout>




        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>