<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/refer_dialog_background"
        android:paddingTop="15pt"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="05pt"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/Refer_Survey_Title"
                    android:textAlignment="textStart"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/ReferSecondry"
                    android:text="@string/Refer_Survey_Description"
                    android:textAlignment="textStart"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="60pt"
                    android:layout_height="50pt"
                    android:layout_margin="05pt"
                    android:src="@drawable/refer_friend_gift"
                    >

                </ImageView>
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
           android:id="@+id/tv_Dialog_ReferSurvey_PointsText"
            android:textAlignment="center"
            />




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            android:elevation="8dp"
            app:cardBackgroundColor="@color/black"
            android:dividerHeight="0.0px"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:cardPreventCornerOverlap="false"
            android:id="@+id/cv_refersurvey_copy"
            android:layout_margin="05pt"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="02pt">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textAllCaps="false"
                    android:text="Copy Refer Code"
                    android:padding="02pt"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/refer_dialog_secondry_background"
            android:paddingTop="15pt"
            android:paddingLeft="05pt"
            android:paddingRight="05pt"
            android:paddingBottom="05pt"
            android:gravity="center">





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="05pt"
                android:textColor="@color/black"
                android:layout_marginTop="05pt"
                android:text="@string/Refer_Survey_ShareWith"
                android:textAlignment="center"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="02pt"
                android:layout_marginTop="05pt"
                android:layout_marginBottom="05pt">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_facebook"
                    android:layout_margin="02pt"
                    android:id="@+id/iv_refersurvey_facebook"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_twitter"
                    android:layout_margin="02pt"
                    android:id="@+id/iv_refersurvey_twitter"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_whatsapp"
                    android:layout_margin="02pt"
                    android:id="@+id/iv_refersurvey_whatsapp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_email_refer"
                    android:layout_margin="02pt"
                    android:id="@+id/iv_refersurvey_mail"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>