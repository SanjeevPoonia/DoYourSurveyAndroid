<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.qdegrees.activity.ui.dashboard.DashboardFragment"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/wave_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_wavesmall"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/wave_image"
                        android:padding="05pt">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="05pt"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="05dp"
                                android:elevation="4dp"
                                app:cardBackgroundColor="@color/cardview_light_background"
                                android:dividerHeight="0.0px"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                app:cardPreventCornerOverlap="false"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="01pt"
                                        android:src="@drawable/ic_pointearned"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textStyle="bold"
                                            android:text="0"
                                            android:padding="01pt"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:id="@+id/tvFragmentHomePointEarned"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/view_color"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="Points Earned"
                                            android:padding="01pt"
                                            />
                                    </LinearLayout>


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="05pt"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="05dp"
                                android:elevation="4dp"
                                app:cardBackgroundColor="@color/cardview_light_background"
                                android:dividerHeight="0.0px"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                app:cardPreventCornerOverlap="false"

                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="01pt"
                                        android:src="@drawable/ic_redeempoints"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/tvFragmentHomePointRedeemed"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="01pt"
                                            android:text="0"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/view_color"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="Points Redeemed"
                                            android:padding="01pt"
                                            />
                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="03pt">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="05pt"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="05dp"
                                android:elevation="4dp"
                                app:cardBackgroundColor="@color/cardview_light_background"
                                android:dividerHeight="0.0px"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                app:cardPreventCornerOverlap="false"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="01pt"
                                        android:src="@drawable/ic_pointsavailable"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textStyle="bold"
                                            android:text="0"
                                            android:padding="01pt"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:id="@+id/tvFragmentHomePointAvailable"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/view_color"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="Points Available"
                                            android:padding="01pt"
                                            />
                                    </LinearLayout>


                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_margin="05pt"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="05dp"
                                android:elevation="4dp"
                                app:cardBackgroundColor="@color/cardview_light_background"
                                android:dividerHeight="0.0px"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                app:cardPreventCornerOverlap="false"

                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="01pt"
                                        android:src="@drawable/ic_completedsurvey"
                                        />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="center">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textStyle="bold"
                                            android:text="0"
                                            android:padding="01pt"
                                            android:textAppearance="?android:attr/textAppearanceMedium"
                                            android:id="@+id/tvFragmentHomeCompletedSurvey"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textColor="@color/view_color"
                                            android:textStyle="bold"
                                            android:textSize="12sp"
                                            android:text="Completed Survey"
                                            android:padding="01pt"
                                            />
                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="02pt"
                                >
                                <ProgressBar
                                    android:id="@+id/pbFragmentHome_Profile"
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:indeterminate="false"
                                    android:progressDrawable="@drawable/circular_progress_bar"
                                    android:background="@drawable/circle_shape"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:max="100"
                                    android:progress="0"
                                    android:layout_margin="02pt"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="02pt"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorAccent"
                                    android:text="0%"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/tvFragmentHome_Percentage"
                                    android:layout_centerInParent="true"
                                    />
                            </RelativeLayout>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_margin="02pt"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="05dp"
                                android:elevation="4dp"
                                app:cardBackgroundColor="@color/cardview_light_background"
                                android:dividerHeight="0.0px"
                                android:clipToPadding="false"
                                android:clipChildren="false"
                                app:cardPreventCornerOverlap="false"
                                android:id="@+id/cv_fragmentHome_Profile"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="02pt">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:id="@+id/tv_fragmentHome_ProfileTitle"
                                        android:padding="01pt"
                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:textColor="@color/colorAccent"
                                        android:text="Click Here"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:id="@+id/tv_fragmenthome_ClickHere"
                                        />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="05pt"
                    android:gravity="center">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvFragmentHome"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10pt"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/llFragmentHomeNoData"
                        android:visibility="gone">
                        <ImageView
                            android:layout_width="30pt"
                            android:layout_height="30pt"
                            android:src="@drawable/ic_sorry"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/view_color"
                            android:text="@string/survey_not_Available"
                            android:padding="05pt"
                            android:layout_marginTop="05pt"/>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="05pt"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="10dp"
                            android:elevation="8dp"
                            app:cardBackgroundColor="@color/colorAccent"
                            android:dividerHeight="0.0px"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            app:cardPreventCornerOverlap="false"
                            android:id="@+id/cv_dashboard_Refresh"
                            android:layout_marginTop="10pt"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textAllCaps="false"
                                android:text="Refresh"
                                android:paddingEnd="20pt"
                                android:paddingStart="20pt"
                                android:paddingTop="05pt"
                                android:paddingBottom="05pt"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/ll_fragment_home_Shareable"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10pt"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="05dp"
                            android:elevation="4dp"
                            android:dividerHeight="0.0px"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            app:cardPreventCornerOverlap="false"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/refer_survey_card_background"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="05pt"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="@string/Refer_Survey_Title"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rv_Shareable_FragmentHome"
                            android:visibility="visible"
                            android:layout_marginTop="10pt"
                            />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10pt"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="05dp"
                        android:elevation="4dp"
                        android:dividerHeight="0.0px"
                        android:clipToPadding="false"
                        android:clipChildren="false"
                        app:cardPreventCornerOverlap="false"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/refer_card_background"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="05pt"
                                    android:textColor="@color/ReferTitle"
                                    android:text="REFER A FRIEND"
                                    android:textAlignment="center"
                                    android:textSize="16sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="02pt"
                                    android:textColor="@color/white"
                                    android:text="refer a friend and earn 100 Points"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    />
                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="15dp"
                                    app:cardElevation="10dp"
                                    android:elevation="8dp"
                                    app:cardBackgroundColor="@color/colorAccent"
                                    android:dividerHeight="0.0px"
                                    android:clipToPadding="false"
                                    android:clipChildren="false"
                                    app:cardPreventCornerOverlap="false"
                                    android:id="@+id/cv_dashboard_referbtn"
                                    android:layout_marginTop="10pt"
                                    android:layout_marginBottom="05pt"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:textAppearance="?android:attr/textAppearanceSmall"
                                        android:textAllCaps="false"
                                        android:text="Refer Now"
                                        android:padding="05pt"
                                        />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="75pt"
                                    android:layout_height="50pt"
                                    android:src="@drawable/refer_gift"
                                    />
                            </LinearLayout>


                        </LinearLayout>


                    </androidx.cardview.widget.CardView>



                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#90000000"
            android:orientation="vertical"
            android:id="@+id/Fragment_Home_Demo_Layout"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/demo_profile"
                android:scaleType="fitXY"
                android:id="@+id/Fragment_Home_DemoImg"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="02pt"
                android:background="#30000000"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_margin="02pt"
                android:text="Next"
                android:textColor="@color/white"
                android:id="@+id/Fragment_Home_NextBtn"
                android:textAllCaps="false"
                />


        </RelativeLayout>
    </RelativeLayout>






</LinearLayout>