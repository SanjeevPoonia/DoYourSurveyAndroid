<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#EAE7E7">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary"
                android:padding="05pt"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="02pt"
                    android:src="@drawable/ic_back_arrow"
                    android:id="@+id/SurveyStart_Activity_BackImageView"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:id="@+id/SurveyStart_Activity_SurveyNameText"
                   android:padding="02pt"
                    android:gravity="center_vertical"

                    />

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="05pt"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:elevation="8dp"
                app:cardBackgroundColor="@color/white"
                android:dividerHeight="0.0px"
                android:clipToPadding="false"
                android:clipChildren="false"
                app:cardPreventCornerOverlap="false"
                android:id="@+id/SurveyStart_Activity_MainCv"
                android:visibility="visible"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:id="@+id/SurveySrart_Activity_Questiontext"
                        android:padding="05pt"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/SurveyStart_Activity_EditText_Layout"
                        android:layout_margin="05pt"
                        android:background="@drawable/edit_back_layout_styles"
                        android:visibility="gone">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background_styles"
                            android:hint="Enter here.."
                            android:textColor="@color/black"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:inputType="text|textMultiLine|textCapSentences"
                            android:lines="3"
                            android:id="@+id/SurveyStart_Activity_EditText_Answer"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="05pt"
                        android:id="@+id/SurveyStart_Activity_RadioLayout"
                        android:orientation="vertical"
                        android:visibility="gone">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/SurveyStart_Activity_RadioGroup">

                        </RadioGroup>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="05pt"
                        android:id="@+id/SurveyStart_Activity_CheckBoxLayout"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/SurveyStart_Activity_MatrixLayout"
                        android:visibility="gone">
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >
                            <TableLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/SurveyStart_Activity_MatixTableLayout"
                                >
                            </TableLayout>
                        </HorizontalScrollView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/SurveyStart_Activity_OtherEditText_Layout"
                        android:layout_margin="05pt"
                        android:background="@drawable/edit_back_layout_styles"
                        android:visibility="gone">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edittext_background_styles"
                            android:hint="Other Enter here.."
                            android:textColor="@color/black"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:inputType="text|textMultiLine|textCapSentences"
                            android:lines="3"
                            android:id="@+id/SurveyStart_Activity_OtherEditText_Answer"/>
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end|center_vertical"
                        android:padding="05pt">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="05pt"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="10dp"
                            android:elevation="8dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            android:dividerHeight="0.0px"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            app:cardPreventCornerOverlap="false"
                            android:id="@+id/SurveyStart_Activity_NextbtnCv"
                            android:visibility="gone"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textAllCaps="false"
                                android:text="Next"
                                android:paddingEnd="20pt"
                                android:paddingStart="20pt"
                                android:paddingTop="05pt"
                                android:paddingBottom="05pt"
                                />
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="05pt"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="10dp"
                            android:elevation="8dp"
                            app:cardBackgroundColor="@color/colorPrimary"
                            android:dividerHeight="0.0px"
                            android:clipToPadding="false"
                            android:clipChildren="false"
                            app:cardPreventCornerOverlap="false"
                            android:id="@+id/SurveyStart_Activity_SubmitbtnCv"
                            android:visibility="gone"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textAllCaps="false"
                                android:text="Submit"
                                android:paddingEnd="20pt"
                                android:paddingStart="20pt"
                                android:paddingTop="05pt"
                                android:paddingBottom="05pt"
                                />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
            </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>