<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.qdegrees.activity.ui.panelprofile.PanelProfileFragment"
    android:padding="05pt">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="02pt"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="05dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="01pt"
                            android:src="@drawable/ic_pointearned"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:text="0"
                                android:padding="01pt"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/tvFragmentProfilePointEarned"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/view_color"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Points Earned"
                                android:padding="01pt"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="02pt"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="05dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="01pt"
                            android:src="@drawable/ic_redeempoints"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvFragmentProfilePointRedeemed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="01pt"
                                android:text="0"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/view_color"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Points Redeemed"
                                android:padding="01pt"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="05pt">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="02pt"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="05dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="01pt"
                            android:src="@drawable/ic_pointsavailable"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:text="0"
                                android:padding="01pt"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/tvFragmentProfilePointAvailable"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/view_color"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Points Available"
                                android:padding="01pt"
                                />
                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="02pt"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="05dp"
                    android:elevation="4dp"
                    app:cardBackgroundColor="@color/cardview_light_background"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="01pt"
                            android:src="@drawable/ic_completedsurvey"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold"
                                android:text="0"
                                android:padding="01pt"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/tvFragmentProfileCompletedSurvey"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/view_color"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:text="Completed Survey"
                                android:padding="01pt"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <ProgressBar
                android:id="@+id/pbFragmentProfileProfile"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="02pt"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:text="0%"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvFragmentProfilePercentage"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="02pt"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tvFragmentProfileComplete"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rvFragmentProfile"
                android:visibility="gone"/>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>