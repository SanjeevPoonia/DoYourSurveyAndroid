<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="05pt">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="02pt"
        app:cardCornerRadius="10dp"
        app:cardElevation="05dp"
        android:elevation="4dp"
        app:cardBackgroundColor="@color/cardview_light_background"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardPreventCornerOverlap="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="05pt"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="01pt"
                    android:src="@drawable/ic_back_arrow"
                    android:id="@+id/Activity_ReedemPoints_BackImage"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Reedem Points"
                    android:layout_marginLeft="10pt"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="05pt"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/yellow"
                    android:text="Available Points : 1050"
                    android:id="@+id/Activity_ReedemPoints_AvailablePointsText"
                    android:paddingTop="05pt"
                    android:paddingBottom="05pt"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/view_color"
                    android:text="Email : "
                    android:id="@+id/Activity_ReedemPoints_EmailText"
                    android:paddingTop="05pt"
                    android:paddingBottom="05pt"
                    android:textStyle="bold"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/edit_back_layout_styles"
                    android:padding="02pt"
                    android:layout_marginTop="05pt"
                    android:layout_marginBottom="05pt">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:hint="Enter Points.."
                        android:imeOptions="actionDone"
                        android:background="@drawable/edittext_background_styles"
                        android:id="@+id/Activity_ReedemPoints_ReedemPointEditText"/>

                </LinearLayout>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background_styles"
                    android:layout_marginTop="05pt"
                    android:layout_marginBottom="05pt"
                    android:id="@+id/Activity_ReedemPoints_Voucher_Spinner"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/Activity_ReedemPoints_PaytmNumber_Layout"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/view_color"
                        android:text="Please Enter your Paytm Mobile Number Below"
                        android:paddingTop="05pt"
                        android:textSize="14sp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/edit_back_layout_styles"
                        android:padding="02pt"
                        android:layout_marginTop="05pt"
                        android:layout_marginBottom="05pt"

                       >
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:digits="0123456789"
                            android:maxLength="10"
                            android:hint="Enter Paytm Number here"
                            android:imeOptions="actionDone"
                            android:background="@drawable/edittext_background_styles"
                            android:id="@+id/Activity_ReedemPoints_PaytmMobileNumberEditText"/>

                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="10dp"
                    android:elevation="8dp"
                    app:cardBackgroundColor="@color/colorAccent"
                    android:dividerHeight="0.0px"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    app:cardPreventCornerOverlap="false"
                    android:id="@+id/cv_Actvity_Submit"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textAllCaps="false"
                        android:text="  Submit  "
                        android:paddingEnd="20pt"
                        android:paddingStart="20pt"
                        android:paddingTop="05pt"
                        android:paddingBottom="05pt"
                        />
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>